# JWT Authentication
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_ALGORITHM=HS256

# Exabeam Configuration
EXABEAM_CLIENT_ID=your-exabeam-client-id
EXABEAM_CLIENT_SECRET=your-exabeam-client-secret
EXABEAM_BASE_URL=https://api.us-west.exabeam.cloud

# Server Configuration
PORT=8080
LOG_LEVEL=INFO

# HashiCorp Vault Integration (Optional)
VAULT_ENABLED=false
VAULT_URL=https://vault.example.com:8200
VAULT_TOKEN=hvs.CAESIJ...
VAULT_SECRET_PATH=secret/exabeam-mcp
VAULT_MOUNT_POINT=secret

# Vault Authentication Methods (choose one)
# Method 1: Token Authentication (default)
# VAULT_TOKEN=hvs.CAESIJ...

# Method 2: AppRole Authentication
# VAULT_ROLE_ID=your-role-id
# VAULT_SECRET_ID=your-secret-id

# Method 3: Kubernetes Authentication
# VAULT_K8S_ROLE=exabeam-mcp
